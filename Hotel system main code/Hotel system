void hotelsystem(){
    printf("--------WELCOME TO HOTEL--------\n");
    FILE *ptr;
    ptr=fopen("order.txt","w");
    
    welcome();

    int d;

    while (1)
    {
    printf("1 TO ORDER MORE\n2 TO EXIT OR FINAL ORDER\n");
    scanf("%d",&d);
    clears();
    if (d==1)
    {
    welcome();
    clears();
    }

    else if (d==2)
    {
    
    int totalv=0;
    for (int i = 0; i < 20; i++)
    {
       totalv=totalv+totaldosa[i]+totalidli[i]+totalsandwich[i]+totalother[i]+totaltea[i]+totalcoffe[i]
       +totalsoda[i]+totallassi[i]+totaljuice[i]+totalicecream[i]+totalwafflecone[i];
    }
    printf("-------------------ORDERED FOOD ITEM--------------------\n");
    final_order_printer();
    printf("TOTAL\t\t\t\t            =");
    printf("%d",totalv);
    printf("\n\nYOUR ORDER WILL ARRIVE SOON \n\n\n\n\n");
    printf("-------------------THANKYOU FOR VISITING-------------------\n");
    printf("PRESS ENTER TO EXIT\n");
    getch();
    break;
        }
else {
    printf("error\n");
    }
    
    }
    return ;
}
