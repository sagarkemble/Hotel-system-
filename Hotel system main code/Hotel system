    printf("4 FOR BEVRAGES\n");
    printf("5 FOR COLDRINKS\n");
    printf("6 FOR ICECREAMS\n");
    scanf("%d",&ui);
    clears();
    if (ui==1)
    {
        south_indian();
    }
    else if (ui==2)
    {
        sandwich();
    }
    else if (ui==3)
    {
        otherdishes();
    }
    else if (ui==4)
    {
        bevrages();
    }
    else if (ui==5)
    {
        coldrinks();
    }
    else if (ui==6)
    {
       icecreams();
    }
    else{
        printf("wrong data entered \n");
        return;
    }
    return;
    
}
