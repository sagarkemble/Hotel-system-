#include<stdio.h>
void welcome();
void south_indian();
void sandwich();
void otherdishes();
void bevrages();
void coldrinks();
void icecreams();
void final_order_printer();
int totaldosa[20];
int totalidli[20];
int totalsandwich[20];
int totalother[20];
int totaltea[20];
int totalcoffe[20];
int totalsoda[20];
int totallassi[20];
int totaljuice[20];
int totalicecream[20];
int totalwafflecone[20];
int main(){

printf("--------WELCOME TO HOTEL--------\n");
    FILE *ptr;
    ptr=fopen("order.txt","w");
    
welcome();

int d;

while (1)
{
    printf("1 TO ORDER MORE\n2 TO EXIT OR FINAL ORDER\n");
    scanf("%d",&d);
    if (d==1)
{
    welcome();
}

 else if (d==2)
{
    
    int totalv=0;
    for (int i = 0; i < 20; i++)
    {
       totalv=totalv+totaldosa[i]+totalidli[i]+totalsandwich[i]+totalother[i]+totaltea[i]+totalcoffe[i]
       +totalsoda[i]+totallassi[i]+totaljuice[i]+totalicecream[i]+totalwafflecone[i];
    }
    printf("-------------------ORDERED FOOD ITEM--------------------\n");
    final_order_printer();
    printf("TOTAL\t\t\t\t            =");
    printf("%d",totalv);
    printf("\n\nYOUR ORDER WILL ARRIVE SOON \n\n\n\n\n");
    printf("-------------------THANKYOU FOR VISITING-------------------\n");
   break;
}
else {
    printf("error\n");
}
    
}
return 0;
}
void welcome(){
    int ui;
    printf("WHAT WOULD LIKE TO HAVE TODAY\n");
    printf("1 FOR SOUTH INDIAN\n");
    printf("2 FOR SANDWICHES\n");
    printf("3 FOR OTHERDISHES\n");
    printf("4 FOR BEVRAGES\n");
    printf("5 FOR COLDRINKS\n");
    printf("6 FOR ICECREAMS\n");
    scanf("%d",&ui);
    if (ui==1)
    {
        south_indian();
    }
    else if (ui==2)
    {
        sandwich();
    }
    else if (ui==3)
    {
        otherdishes();
    }
    else if (ui==4)
    {
        bevrages();
    }
    else if (ui==5)
    {
        coldrinks();
    }
    else if (ui==6)
    {
       icecreams();
    }
    else{
        printf("wrong data entered \n");
        return;
    }
    return;
    
}
