void final_order_printer(){
    FILE* ptr;
    ptr=fopen("order.txt","r");
    rewind(ptr);
    while (1)
    {
        char a=fgetc(ptr);
        if (a==EOF)
        {
            break;
        }
        
        
         printf("%c",a);
        
    }
    
   
    return;
}
